<%- model_class = List -%>

<div class="col-lg-12 row">
  <div class="page-header col-lg-2">
    <h1>Lists</h1>
  </div>


  <div class="col-lg-1 spacer-button">
    <%= link_to 'New List',
                new_list_path,
                class: 'btn btn-primary' if mutation?
     %>
  </div>

  <div class="col-lg-1 spacer-button" data-toggle="button" aria-pressed="false" autocomplete="off">
    <%= link_to 'Show my lists only',
                lists_own_path,
                method: 'get',
                class: 'btn btn-primary' if mutation?
     %>
  </div>

</div>

<table class="table table-striped fadeactions col-lg-12">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email_id) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:query) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @lists.order("name") %>
  </tbody>
</table>


  <div class="col-lg-2 spacer-button">
    <%= link_to 'New List',
                new_list_path,
                class: 'btn btn-primary' if mutation?
     %>
  </div>


<%= content_tag(:div, "partial lists/_list" , class: 'iv col-lg-12') %>
<%= content_tag(:div, "#{__FILE__}" , class: 'iv col-lg-12') %>