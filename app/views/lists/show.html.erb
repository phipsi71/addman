<%- model_class = List -%>
<div class="page-header col-lg-12">
  <!-- h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1 -->
  <h1><%= content_tag(:i, nil, class: 'glyphicon glyphicon-list') %><%= " #{@list.name}" %></h1>
</div>

<!-- dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @list.name %></dd>
</dl -->

 <div class="panel panel-default panel-body col-lg-5">
    <dl class="dl-horizontal">
      <dt class="dim"><strong ><%= model_class.human_attribute_name(:id) %>:</strong></dt>
      <dd class="dim"><%= @list.id %></dd>
      <dt class="dim"><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
      <dd class="dim"><%= @list.updated_at.try(:to_formatted_s).try(:first,16) %></dd>
    </dl>
    <div class='panel-btn-group row'>          
        <%= link_to t('.back', :default => t("helpers.links.back")),
                      :back, :class => 'btn btn-default spacer-medium'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_list_path(@list), :class => 'btn btn-default spacer-medium' if current_user %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      list_path(@list),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger spacer-medium' if current_user %>

    </div>

  </div>

<div class="col-lg-7"></div>

<div class="row">
<div class="col-lg-9">
  <span class='iv'><%= "#{__FILE__}" %></span>
</div>
<div class="col-lg-3"></div>
</div>

<div class="row col-lg-12">
  <%= render partial: "mailgroups/list_mailgroups" %>
</div>

<p class='iv'><%= "#{__FILE__}" %></p>