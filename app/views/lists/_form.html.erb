<%= form_for @list, html: { class: "form-horizontal list" } do |f| %>

    <% if @list.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group row">
    <%= f.label :id, class: 'control-label col-lg-1 dim' %>
    <div class="controls col-lg-4">
      <%= f.text_field :id, class: 'form-control', readonly: true %>
    </div>
    <%= error_span(@list[:id]) %>
  </div>

  <div class="control-group row">
    <%= f.label :name, class: 'control-label col-lg-1' %>
    <div class="controls col-lg-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= error_span(@list[:name]) %>
  </div>

  <div class="control-group row">
    <%= f.label :email_id, class: 'control-label col-lg-1' %>
    <div class="controls input-group col-lg-4">
      <%= f.text_field :email_id, class: 'form-control addon' %>
      <span class="input-group-addon" id="basic-addon2">@sakk.ch</span>
    </div>
    <%= error_span(@list[:email_id]) %>
  </div>

  <div class="control-group row">
    <%= f.label :admin, class: 'control-label col-lg-1' %>
    <div class="controls col-lg-4">
      <%= f.text_field :admin, class: 'form-control' %>
    </div>
    <%= error_span(@list[:admin]) %>
  </div>

  <div class="control-group row">
    <%= f.label :query, class: 'control-label col-lg-1' %>
    <div class="controls col-lg-4">
      <%= f.text_field :query, class: 'form-control' %>
    </div>
    <%= error_span(@list[:query]) %>
  </div>

  <div class="control-group row">
    <%= f.label :type, class: 'control-label col-lg-1' %>
    <div class="controls col-lg-4">
      <%= f.text_field :type, class: 'form-control' %>
    </div>
    <%= error_span(@list[:type]) %>
  </div>


  <%= f.submit "Update list", class: 'btn btn-primary spacer-medium' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            :back, class: 'btn btn-default spacer-medium' %>

<% end %>

<p class='iv'><%= "#{__FILE__}" %></p>