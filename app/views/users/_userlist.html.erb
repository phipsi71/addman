  <%- model_class = User -%>
  

  <div>
    <%= will_paginate @user, renderer: BootstrapPagination::Rails %>
  </div>



<table class="table table-striped fadeactions">
  <thead>
    <tr>
      <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:function) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>

      <th class="dim"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="fadeactions">
        <td class="dim"><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.function %></td>
        <td><%= user.company %></td>
        <td><%= user.city %></td> 
        <td class="fadeactions col-md-2">
          <%= link_to(content_tag(:i, nil, class: 'fa fa-group' ), user_path(user),
                data: {toggle: "tooltip", title: "Add group", placement: 'top'})
           %>
          <%= link_to(content_tag(:i, nil, class: 'fa fa-pencil'), edit_user_path(user),
                data: {toggle: "tooltip", title: "Edit user", placement: 'bottom'})
           %>
          <%= link_to(content_tag(:i, nil, class: 'fa fa-trash-o'),
            user_path(user),
            method: :delete, 
            data: { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                     toggle: "tooltip", title: "Delete user", placement: 'top'
              })
          %>      
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= will_paginate @user, renderer: BootstrapPagination::Rails %>
</div>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.back', :default => t("helpers.links.back")),
            :back,
            :class => 'btn btn-default' %>
