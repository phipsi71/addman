<!-- partial _userlist.html.erb 

    used ALSO to present SEARCH RESULTS  -->

<%- model_class = User -%>


<div class="row col-lg-8">
<%= will_paginate @user, renderer: BootstrapPagination::Rails %>
</div>


<div class="row col-lg-12">
<table class="table table-striped fadeactions">
  <thead class="grad">
    <tr>
      <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:firstname) %></th>
      <th><%= model_class.human_attribute_name(:function) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>

      <th class="dim"><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    
      <!--  loop is created with content_tag_for in partial -->
      <%= render @users.order(:lastname, :firstname), layout: false %>  

  </tbody>
</table>
</div>


<div class="row col-lg-8">
<%= will_paginate @user, renderer: BootstrapPagination::Rails %>
</div>
<!-- <div class="col-lg-3"></div> -->

<div class="row col-lg-12">
<%= link_to t('.new', default: t("helpers.links.new")),
            new_user_path,
            class: 'btn btn-primary' if current_user %>

<%= link_to t('.back', default: t("helpers.links.back")),
            :back,
            class: 'btn btn-default' %>

</div>


<%= content_tag(:div, "#{__FILE__}" , class: 'iv col-lg-12') %>