<%- model_class = User -%>
<div class="page-header">
  <h1><%= if @user.id.nil?
            " Copy User"
          elsif @user.lastname.nil?
            " #{@user.company}"            
  				else
            " #{@user.lastname} #{@user.firstname}"
  				end
  		%>
      <%= content_tag(:i, nil, class: 'fa fa-pencil') %>
  </h1>
</div>
<%= render :partial => 'form' %>

<div class="col-lg-12">
<p class='iv'><%= "#{__FILE__}" %></p>
</div>