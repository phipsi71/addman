<%- model_class = User -%>

<div class="page-header col-lg-3">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.	titleize %></h1>
</div>

<div class="col-lg-3 spacer-button">
	<%= link_to 'New User',
	            new_user_path,
	            class: 'btn btn-primary' if mutation?
	 %>
  <%= link_to 'Pick a sample', 
			    		sample_user_path,
			        data: {toggle: "tooltip", title: "Go to a randomly selected user", placement: 'top'},
				 			class: 'btn btn-primary' 
   %>
</div>

<div class="col-lg-4 spacer-button">
	<%= form_tag(users_path, method: "get") do %>
	  <div class="input-group search">
	    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-file-text-o"></i></span>
	    <input type="text" class="form-control" placeholder="Search for term in all fields" name="term">
	    <span class="input-group-btn">
	      <button class="btn btn-default" type="submit">Go!</button>
	    </span>
	  </div>
	<% end %>
	<%= form_tag(users_path, method: "get") do %>
	  <div class="input-group search-tel spacer-small">
	  	<span class="input-group-addon" id="basic-addon2"><i class="fa fa-phone"></i></span>
	    <input type="text" pattern="[ +0-9]*" class="form-control" min="0" step="1" placeholder="Search phone number" name="termphone">
	    <span class="input-group-btn">
	      <button class="btn btn-default" type="submit">Go!</button>
	    </span>
	  </div>
	<% end %>

</div>


<% if @term.present? %>
	<div class="col-lg-12">
		<%= content_tag(:h3, "Search results for ")  %>
		<%= content_tag(:i, content_tag(:h2, "'#{@term}'", class: "strong")) %>
	</div>
<% end %>

<%= render partial: 'userlist' %>


<div class='col-lg-12 iv'><%= "#{__FILE__}" %></div>
