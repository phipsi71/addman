
<div class="modal fade" id="modprint_user">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h2 class="modal-title"><i class="glyphicon glyphicon-print"></i>&nbsp Print</h2>
      </div>

        <div class="modal-body">

        <div class="page-header col-lg-12">
          <h1><%= content_tag(:i, nil, class: 'fa print') %>
            <span class="dim"></span><%= "#{@user.firstname} #{@user.lastname}" %> 
          </h1>
        </div>


        <ul class="print-options">

          <li> <!--   BADGE  -->
            <%= link_to(content_tag(:i, nil, class: 'fa fa-tag') + "Print badge", 
                  "http://sakkreports.siak.ch/ReportServer/Pages/ReportViewer.aspx?%2fSERVICES%2fADDRESSES%2fR+USER+BADGE&rs:Command=Render&rs:Format=PDF&UserID=#{@user.id}",
                  data: {toggle: "tooltip", title: "Print single badge", placement: 'right'},
                  target: '_blank',
                  class: 'btn btn-default fixed-width'
                )
             %>
          </li>
          
          <li> <!--   LABEL  -->
            <%= link_to content_tag(:i, nil, class: 'fa fa-print') + "Print label",
                  "http://sakkreports.siak.ch/ReportServer/Pages/ReportViewer.aspx?%2fSERVICES%2fADDRESSES%2fR+USER+LABEL&rs:Command=Render&rs:Format=PDF&UserID=#{@user.id}",
                  data: {toggle: "tooltip", title: "Print single label", placement: 'right'},
                  class: 'btn btn-default fixed-width'
             %>
          </li>

          <li> <!--   USER DETAILS  -->
            <%= link_to content_tag(:i, nil, class: 'fa fa-print') + "Print user details",
                  # "http://sakkreports.siak.ch/ReportServer/Pages/ReportViewer.aspx?%2fSERVICES%2fADDRESSES%2fR+USER+OVERVIEW&rs:Command=Render&rs:Format=PDF&UserID=#{@user.id}",
                  "http://sakkreports.siak.ch/ReportServer/Pages/ReportViewer.aspx?%2fSERVICES%2fADDRESSES%2fR+USER+DETAILS&rs:Command=Render&rs:Format=PDF&UserID=#{@user.id}",
                  data: {toggle: "tooltip", title: "User details and group memberships", placement: 'right'},
                  class: 'btn btn-default fixed-width'
             %>
          </li>

        </ul>
        
       <div class="modal-footer">

      <%= link_to content_tag(:i, "", class: "fa fa-close") + "Close",
                  "",
                  class: "btn btn-default",
                  data: { dismiss: "modal"}
      %>

        </div><!-- /.modal-footer -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

