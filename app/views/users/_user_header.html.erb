<%- model_class = User -%>

<%= content_tag(:div, "#{__FILE__}" , class: 'iv col-lg-12') %>

<col width="5%"  />
<% if show_check %>
    <col width="3%"  />
<% end %>    
<col width="10%" />
<col width="15%" />
<col width="15%" />
<col width="15%" />
<col width="15%" />
<col width="12%" />
<col width="10%" />


<thead>
  <tr>
    <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
    <% if show_check %>
    <th><%= 
        content_tag(:div, class: "checkbox checkbox-primary") do
          check_box_tag('select_all', 'yes', true) +   # wegen '+' : http://stackoverflow.com/questions/4205613/rails-nested-content-tag
          content_tag(:label)
        end %>
    </th>
    <% end %>
    <th><%= sortable("firstname") %></th>
    <th><%= sortable("lastname") %></th>
    <th><%= sortable("function") %></th>
    <th><%= sortable("company") %></th>
    <th><%= sortable("appendix") %></th>
    <th><%= sortable("city") %></th>
    <th class="dim"><%=t '.actions', default: t("helpers.actions") %></th>
  </tr>
</thead>
