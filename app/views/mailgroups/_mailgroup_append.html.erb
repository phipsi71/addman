
<%= content_tag_for(:tr, mailgroup) do %>
  <td class="dim"><%= mailgroup.id %></td>
  <td><%= mailgroup.name %></td>
  <td><%= mailgroup.trialcode %></td>
  <td><%= mailgroup.importance %></td>
  <td class="fadeactions col-md-2">

    <%= link_to(content_tag(:i, nil, class: 'fa fa-pencil'), edit_mailgroup_path(mailgroup),
          data: {toggle: "tooltip", title: "Edit mailgroup", placement: 'top'}) if current_user
     %>
     
    <%= link_to(content_tag(:i, nil, class: 'fa fa-group' ), mailgroup_path(mailgroup),
          data: {toggle: "tooltip", title: "Users", placement: 'top'})
     %>

    <%= link_to(content_tag(:i, nil, class: 'fa fa-minus-square-o'),
                remove_user_mailgroup_path(@user, mailgroup),
                method: :delete,
                remote: :true,
                data: { confirm: "Sure to remove #{mailgroup.name} from #{@user.lastname} #{@user.firstname} ?",
                              toggle: "tooltip", title: "Remove mailgroup", placement: 'top' }
        ) if current_user
     %>

  </td>
<% end %>
