<%- model_class = Mailgroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:memo) %></th>
      <th><%= model_class.human_attribute_name(:trialcode) %></th>
      <th><%= model_class.human_attribute_name(:importance) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mailgroups.each do |mailgroup| %>
      <tr>
        <td><%= link_to mailgroup.id, mailgroup_path(mailgroup) %></td>
        <td><%= mailgroup.name %></td>
        <td><%= mailgroup.memo %></td>
        <td><%= mailgroup.trialcode %></td>
        <td><%= mailgroup.importance %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mailgroup_path(mailgroup), :class => 'btn btn-default btn-xs' , class: 'hidden' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mailgroup_path(mailgroup),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mailgroup_path,
            :class => 'btn btn-primary' %>
