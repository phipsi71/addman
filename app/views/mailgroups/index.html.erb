<%- model_class = Mailgroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped fadeactions">
  <thead>
    <tr>
      <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:trialcode) %></th>
      <th><%= model_class.human_attribute_name(:importance) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

    <%= render @mailgroups %>
    
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mailgroup_path,
            :class => 'btn btn-primary spacer-medium' %>
