<%- model_class = Mailgroup -%>
<div class="page-header">
  <!-- h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1 -->
  <h1>Groups</h1>
</div>

<%= form_tag(search_mailgroups_path, method: "get")  do %>
  <div class="input-group search col-lg-7">
    <input type="text" class="form-control" placeholder="Search..." name="term">
    <span class="input-group-btn">
      <button class="btn btn-default" type="submit">Find</button>
    </span>
  </div>
<% end %> 

<div>
  <%= will_paginate @mailgroup, renderer: BootstrapPagination::Rails %>
</div>


<table class="table table-striped fadeactions">
  <thead>
    <tr>
      <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:trialcode) %></th>
      <th><%= model_class.human_attribute_name(:importance) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

    <%= render @mailgroups %>
    
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mailgroup_path,
            :class => 'btn btn-primary spacer-medium' if current_user 
%> 
<p class='iv'><%= "#{__FILE__}" %></p>