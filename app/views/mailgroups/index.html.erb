<%- model_class = Mailgroup -%>

<div class="page-header col-lg-3">
  <h1>Groups</h1>
</div>

<div class="col-lg-3 spacer-button">
    <%= link_to 'New Group',
                new_mailgroup_path,
                class: 'btn btn-primary' if mutation?
     %>
   <!-- %= link_to 'Pick one', 
                sample_user_path,
                data: {toggle: "tooltip", title: "Go to a randomly selected user", placement: 'top'},
                class: 'btn btn-primary' 
     % -->
</div>

<div class="col-lg-4 spacer-button">
  <%= form_tag(mailgroups_path, method: "get")  do %>
    <div class="input-group search">
      <input type="text" class="form-control" placeholder="Search groups" name="term">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Find</button>
      </span>
    </div>
  <% end %> 
</div>


<div class="col-lg-12">
  <%= content_tag(:h3, "Search results for ") if @term.present? %>
  <%= content_tag(:i, content_tag(:h2, "'#{@term}'", class: "strong"))  if @term.present? %>
</div>


<div class="col-lg-12 row">
  <%= will_paginate @mailgroup, renderer: BootstrapPagination::Rails %>
</div>


<table class="table table-striped fadeactions mailgroups col-lg-12 fixed">
  <%= render partial: 'mailgroup_header' %>
  <tbody>
    <%= render @mailgroups %>
  </tbody>
</table>

<div class="col-lg-12">
  <%= will_paginate @mailgroup, renderer: BootstrapPagination::Rails %>
</div>

<div class="col-lg-3 spacer-button">
    <%= link_to 'New Group',
                new_mailgroup_path,
                class: 'btn btn-primary' if mutation?
     %>
   <!-- %= link_to 'Pick one', 
                sample_user_path,
                data: {toggle: "tooltip", title: "Go to a randomly selected user", placement: 'top'},
                class: 'btn btn-primary' 
     % -->
</div>

<%= content_tag(:div, "see partial 'mailgroups/mailgroup'" , class: 'iv col-lg-12') %>
<%= content_tag(:div, "#{__FILE__}" , class: 'iv col-lg-12') %>