<%- model_class = Mailgroup -%>


<div class="row page-header col-lg-3">
  <h1>Groups</h1>
</div>

<div class="col-lg-3 spacer-button">
    <%= link_to 'New Group',
                new_mailgroup_path,
                class: 'btn btn-primary' if current_user
     %>
   <!-- %= link_to 'Pick one', 
                sample_user_path,
                data: {toggle: "tooltip", title: "Go to a randomly selected user", placement: 'top'},
                class: 'btn btn-primary' 
     % -->
</div>

<div class="col-lg-4 spacer-button">
  <%= form_tag(search_mailgroups_path, method: "get")  do %>
    <div class="input-group search">
      <input type="text" class="form-control" placeholder="Search..." name="term">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Find</button>
      </span>
    </div>
  <% end %> 
</div>

<div class="col-lg-12 row">
  <%= will_paginate @mailgroup, renderer: BootstrapPagination::Rails %>
</div>

<table class="table table-striped fadeactions col-lg-12">
  <thead>
    <tr>
      <th class="dim"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:trialcode) %></th>
      <th># Users</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

    <%= render @mailgroups %>

  </tbody>
</table>

<div class="col-lg-12 row">
  <%= will_paginate @mailgroup, renderer: BootstrapPagination::Rails %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mailgroup_path,
            :class => 'btn btn-primary spacer-medium' if current_user
%>


<%= content_tag(:div, "partial mailgroups/mailgroup" , class: 'iv col-lg-12') %>
<%= content_tag(:div, "#{__FILE__}" , class: 'iv col-lg-12') %>