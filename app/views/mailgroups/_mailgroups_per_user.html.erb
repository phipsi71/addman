<%- model_class = Mailgroup -%>
<div class="page-header">
  <!--h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2-->
  <h1>Mailgroups</h1>
</div>



<table class="table table-striped fadeactions">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:trialcode) %></th>
      <th><%= model_class.human_attribute_name(:importance) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user.mailgroups.each do |mailgroup| %>
      <tr>
        <td><%= link_to mailgroup.id, mailgroup_path(mailgroup) %></td>
        <td><%= mailgroup.name %></td>
        <td><%= mailgroup.trialcode %></td>
        <td><%= mailgroup.importance %></td>
        <!--td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_mailgroup_path(@user, mailgroup), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.remove', :default => t("helpers.links.remove")),
                      delete_user_mailgroup_path(@user, mailgroup),
                      :method => :put,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td-->
        <td class="fadeactions col-md-2">
           <%= link_to(content_tag(:i, nil, class: 'fa fa-minus-square-o'),
              delete_user_mailgroup_path(@user, mailgroup),
              :method => :put,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) })
          %>      
        </td>
      </tr>
    <% end %>
      <tr>
        <td></td>
        <td class="dim">Add Mailgroup</td>
        <td></td>
        <td></td>
        <td class="fadeactions">
          <%= link_to(content_tag(:i, nil, class: 'fa fa-plus-square-o'),
                      mailgroups_choose_path(@user.id)) %>
        </td>
      </tr>
  </tbody>
</table>
